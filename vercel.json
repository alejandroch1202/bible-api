{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/dist/api"
    },
    {
      "source": "/api/(.*)",
      "destination": "/dist/api"
    }
  ],

  "builds": [
    {
      "src": "dist/api/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ]
}